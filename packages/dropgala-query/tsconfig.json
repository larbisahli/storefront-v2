{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@store/*": ["store/*"],
      "@api": ["api/index"],
      "@graphql/*": ["graphql/*"],
      "@models/*": ["models/*"],
      "@packages/*": ["packages/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src", "../../app/utils/rate-limit.ts"],
  "exclude": ["node_modules", "dist"]
}
